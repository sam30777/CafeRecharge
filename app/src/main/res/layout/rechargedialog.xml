<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">



          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="16dp"
              android:id="@+id/cardNumDummy"
              android:textStyle="bold"
              android:textColor="@color/colorPrimary"
              android:text="Card Number"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="horizontal"
             android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:id="@+id/linear_temp"
              android:background="@drawable/rectangleborder"
              android:layout_below="@+id/cardNumDummy"
              android:layout_height="48dp">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:layout_marginLeft="8dp"
                  android:layout_gravity="center"
                  android:text="* * * *  * * * *  * * * *"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="16dp"
                  android:text="3022"
                  android:id="@+id/last_four"
                  android:layout_marginRight="8dp"
                  android:textColor="#212121"
                  android:textSize="16sp"
                  android:layout_gravity="center_vertical"/>
          </LinearLayout>

          <TextView
              android:id="@+id/balTemp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/linear_temp"
              android:layout_marginLeft="16dp"
              android:textStyle="bold"
              android:layout_marginTop="16dp"
              android:text="Balance"
              android:textColor="@color/colorPrimary" />
          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_below="@+id/balTemp"
              android:id="@+id/ballintemp"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_width="wrap_content"
                  android:text="@string/rupees"
                  android:textSize="20sp"
                  android:textColor="@color/colorPrimary"
                  android:layout_marginLeft="16dp"
                  android:layout_height="wrap_content" />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="8dp"
                  android:textColor="@color/colorPrimary"
                  android:id="@+id/balance_card"
                  android:text="200"
                  android:textSize="20sp"/>
          </LinearLayout>
          <EditText
              android:layout_width="match_parent"
              android:background="@drawable/rectangleborder"
              android:layout_height="wrap_content"
              android:layout_below="@+id/ballintemp"
              android:hint="Enter Amount"
              android:id="@+id/recharge_amount"
              android:padding="8dp"
              android:textColor="@color/colorPrimary"
              android:layout_margin="16dp"/>
          <Button
              android:layout_width="wrap_content"
              android:text="Recharge"
              android:backgroundTint="@color/colorPrimary"
              android:layout_alignParentBottom="true"
              android:layout_alignParentEnd="true"
              android:layout_margin="16dp"
              android:id="@+id/rechButton"
              app:backgroundTint="@color/colorPrimary"
              android:background="@drawable/roundedcorners"
              android:textColor="@android:color/white"
              android:layout_height="wrap_content" />


</RelativeLayout>
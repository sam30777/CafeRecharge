<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.android.caferecharge.UserProfile">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_margin="8dp"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_centerHorizontal="true"
                android:layout_height="100dp"
                android:src="@drawable/uload"
                android:scaleType="centerCrop"
                android:id="@+id/user_Image_user_profile"
                android:layout_marginTop="16dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:id="@+id/l"
                android:layout_marginBottom="36dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Name: "
                    android:textColor="#212121"
                    android:layout_below="@+id/user_image"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Santosh"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="RollNumber: "
                    android:textColor="#212121"
                    android:layout_below="@+id/user_image"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="1510991580"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cardProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Card Number"
                android:textColor="#212121" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="See Complete Number"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/linear_temp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/cardProfile"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangleborder"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:text="* * * *  * * * *  * * * *"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/last_four_in_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:text="3022"
                    android:textColor="#212121"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_temp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Card Balance"
                android:textColor="#212121" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t"
                android:layout_marginLeft="16dp"
                android:text="200"
                android:textSize="24sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginBottom="4dp"
    android:layout_height="72dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/linear_dumm"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Number"
                android:textColor="#212121"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:textSize="16sp"
                android:gravity="center"
                android:text="24"
                android:textStyle="bold"
                android:id="@+id/order_number_text"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circulartextview"
                android:padding="4dp"/>
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Firday,March 25"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/linear_dumm"
        android:paddingLeft="16dp"
        android:layout_marginTop="4dp"
        android:textColor="#212121"
        android:id="@+id/order_date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Total:"
            android:textColor="#212121"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/linear_dumm"
            android:layout_marginBottom="4dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/order_total_dum"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="200"
            android:textColor="#212121"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"
            android:id="@+id/order_total"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/order_total_dum"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:layout_margin="4dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/order_status"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="4:20"
            android:id="@+id/order_time"
            android:textSize="16sp"
            android:layout_margin="4dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>